<!DOCTYPE html>
<html lang="en">
<head>
   <%- include("../partials/admin_head.ejs")  %>
    <title>All products</title>
</head>
<body>
    <header>
        <%- include("../partials/admin_navbar1.ejs")  %>
    </header>
    <main>
        <div class="container"><br><br>
          <h1>Welcome back <%= username %></h1>
            <h3 class="center-align">All Brands</h3>
            <%- include("../partials/flash.ejs")  %>
        <table>
            <thead>
              <tr>
                  <th>id</th>
                  <th>Brand Name</th>
                  <th>Description</th>
                  <th>Edit</th>
                  <th>Delete</th>
              </tr>
            </thead>
    
            <tbody>
              <%  results.forEach(item =>{ %>
                <tr>
                  <td><%= item.id %></td>
                  <td><%= item.brand_name %></td>
                  <td><%= item.description %></td>
                  <td><a href="/admin/edit_brand/<%= item.id %>"><i class="material-icons blue-text">edit</i></a></td>
                  <td> <!-- Modal Trigger -->
                    <a class="waves-effect waves-light  modal-trigger" href="#modal1"><i class="material-icons red-text" >delete</i></a>
                  
                    <!-- Modal Structure -->
                    <div id="modal1" class="modal">
                      <div class="modal-content red-text">
                        <h4 >Delete brand</h4>
                        <p>Are you really sure you want to delete this brand?</p>
                      </div>
                      <div class="modal-footer">
                        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
                        <a href="/admin/delete_brand/<%= item.id %>" class="modal-close waves-effect waves-green btn-flat">Agree</a>
                      </div>
                    </div></td>
                </tr>
             <% }) %>
              
            </tbody>
          </table>
        </div><br><br>
    </main>
    <!-- footer here -->
    <%-  include("../partials/admin_footer.ejs")  %>
    
</body>
<%- include("../partials/admin_foot.ejs")  %>
</html>